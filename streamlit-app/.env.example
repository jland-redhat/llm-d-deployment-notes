# Required: Base URL for Llama Stack server
REMOTE_BASE_URL=your_remote_base_url

# Optional: API keys for external services
TAVILY_SEARCH_API_KEY=your_tavily_api_key

# MCP Server URLs (default values, can be overridden)
REMOTE_OCP_MCP_URL=http://openshift-mcp-server:8080
REMOTE_SLACK_MCP_URL=http://slack-mcp-server:8080

# Model configuration
TEMPERATURE=0.0  # Set between 0.0 and 1.0 for more creative responses
TOP_P=0.95       # Only used if TEMPERATURE > 0
MAX_TOKENS=512   # Maximum length of the generated response
